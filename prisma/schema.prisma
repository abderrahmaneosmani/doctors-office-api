generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  PATIENT
  DOCTOR
}
model User{
  id              Int              @id @default(autoincrement())
  firstname String
  lastname  String
  email     String   @unique()
  password String
  role       Role       @default(USER)
  patient   Patient?
  doctor    Doctor?  
}



model Patient {
  id              Int              @id @default(autoincrement())
  date_of_brirh   DateTime
  address         String
  medicalHisotory MedicalHistory[]
  prescriptions   Prescription[]
  appointements   Appointement[]
  userId Int @unique()
  user User @relation(fields: [userId],references: [id])
}


model Doctor {
  id              Int              @id @default(autoincrement())
  sepecialization String
  medicalHisotory MedicalHistory[]
  prescriptions   Prescription[]
  appointements   Appointement[]
  userId Int  @unique
  user User @relation(fields: [userId],references: [id])

}

model Appointement {
  id         Int      @id @default(autoincrement())
  patient_id Int
  doctor_id  Int
  startDate  DateTime
  endDate    DateTime
  reason     String
  doctor     Doctor   @relation(fields: [doctor_id], references: [id])
  patient    Patient  @relation(fields: [patient_id], references: [id])
  status     String

  @@unique([patient_id, doctor_id, startDate])
}

model Treatment {
  id              Int          @id @default(autoincrement())
  dosage          String
  frequency       Int
  medication      String
  start_date      DateTime
  end_date        DateTime
  prescription_id Int
  prescription    Prescription @relation(fields: [prescription_id], references: [id])
}

model Prescription {
  id         Int         @id @default(autoincrement())
  patient_id Int
  doctor_id  Int
  doctor     Doctor      @relation(fields: [doctor_id], references: [id])
  patient    Patient     @relation(fields: [patient_id], references: [id])
  treatments Treatment[]
}

model MedicalHistory {
  id         Int     @id @default(autoincrement())
  patient_id Int
  doctor_id  Int
  doctor     Doctor  @relation(fields: [doctor_id], references: [id])
  patient    Patient @relation(fields: [patient_id], references: [id])
  diagnosis  String
  treatment  String
  note       String
}
